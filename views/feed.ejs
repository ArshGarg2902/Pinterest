<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800">
        <div class="cards flex flex-wrap gap-10">
            <% posts.forEach(function(elem){%>
                <div class="w-32 text-white ">
                    <div class="card w-full h-40 bg-zinc-700  rounded-lg">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%=elem.image%>" alt="">
                        
                    </div>
                    <h5 class="mt-2 text-sm "><%= elem.title%></h5>
                    <h5 class=" text-xs opacity-50 font-semibold "><%= elem.user.username%></h5>

                </div>
           <% })%>
           


    
</div>
</div>
<% include ./partials/footer.ejs %>